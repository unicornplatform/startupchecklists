{{#with subscribe}}
<section class="subscribe-container">
    <header>
      <button type="button" class="subscribe-container__close-button">
        <img src="/icons/cross.svg" height="10" width="10" alt=""
           class="subscribe-container__close-icon">
      </button>
      <div class="subscribe-container__header-container">
        <p class="subscribe-container__header-message">
          {{this.subtitle}}
        </p>
        {{#if this.checklists}}
          <img src="/icons/invalid-name.svg" height="16" width="34" alt=""
             class="subscribe-container__header-icon">
        {{/if}}
        {{#unless this.checklists}}
          <img src="/icons/confused-face.svg" height="12" width="47" alt=""
               class="subscribe-container__header-icon">
        {{/unless}}
      </div>
      <h2 class="subscribe-container__heading">
        {{this.title}}
      </h2>
    </header>
    <section>
      {{#if this.checklists}}
        <div class="checklists-container subscribe-container__checklists-container">
          {{#each checklists}}
            {{#if this.checked}}
              <div class="checklists-container__item checklists-container__item_type_{{this.id}}">
                <div class="checklists-container__checkbox"></div>
                <img src="/icons/line.svg" height="26" width="16" alt=""
                     class="checklists-container__checkbox-icon">
                <input type="checkbox" id="checklist-{{@index}}" class="checklists-container__checkbox-hidden" checked>
                <img src="/icons/{{this.id}}.svg" height="15" width="15" alt=""
                   class="checklists-container__icon">
                <label class="checklists-container__title" for="checklist-{{@index}}">{{this.title}}</label>
              </div>
            {{/if}}
            {{#unless this.checked}}
              <div class="checklists-container__item checklists-container__item_type_{{this.id}}">
                <div class="checklists-container__checkbox"></div>
                <input type="checkbox" id="checklist-{{@index}}" class="checklists-container__checkbox-hidden">
                <img src="/icons/{{this.id}}.svg" height="15" width="15" alt=""
                     class="checklists-container__icon">
                <label class="checklists-container__title" for="checklist-{{@index}}">{{this.title}}</label>
              </div>
            {{/unless}}
          {{/each}}
        </div>
      {{/if}}

      {{#each content}}
        <p class="subscribe-container__content" id="paragraph-{{@index}}">
          {{this.paragraph}}
        </p>
      {{/each}}
      <div class="email-form-container subscribe-container__form-container">
        <form class="email-form subscribe-container__form">
          <label for="email" class="email-form__label">Your email</label>
          <input type="email" id="email" class="email-form__input">
        </form>
        <a class="email-form__subscribe-button" href="">Subscribe</a>
      </div>
    </section>
    <footer>
      {{#each agreements}}
        <p class="subscribe-container__agreement">
          {{{this.agreement}}}
        </p>
      {{/each}}
    </footer>
  </section>
{{/with}}
